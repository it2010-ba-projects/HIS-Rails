<%= title "Passwort ändern" %>

<%= bootstrap_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <%= f.control_group :password, label: "Neues Passwort" do %>
    <%= f.password_field :password %>
  <% end -%>

  <%= f.control_group :password_confirmation, label: "Passwortbestätigung" do %>
    <%= f.password_field :password_confirmation %>
  <% end -%>

  <div class="form-actions">
    <%= f.submit "Passwort ändern" %>
  </div>
<% end %>

<%= render "links" %>